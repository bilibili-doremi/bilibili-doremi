{
  "manifest_version": 3,
  "name": "Bilibili Doremi",
  "version": "1.0",
  "description": "Displays musical scale information on Bilibili videos.",
  "permissions": ["storage"],
  "host_permissions": ["https://raw.githubusercontent.com/*"],
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_title": "Bilibili Doremi 设置"
  },
  "icons": {
    "48": "icon.svg"
  },
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/video/*", "*://*.bilibili.com/list/*"],
      "js": ["content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "doremi@bilibili.com"
    }
  }
}
