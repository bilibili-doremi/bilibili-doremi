{
  "manifest_version": 3,
  "name": "Bilibili Doremi",
  "version": "1.0",
  "description": "Displays musical scale information on Bilibili videos.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://raw.githubusercontent.com/*",
    "file:///*"
  ],
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "Bilibili Doremi 设置",
    "default_popup": "settings.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/video/*", "*://*.bilibili.com/list/*"],
      "js": ["content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "doremi@bilibili.com"
    }
  }
}