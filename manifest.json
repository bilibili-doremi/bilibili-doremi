{
  "manifest_version": 3,
  "name": "Bilibili Doremi",
  "version": "1.0",
  "description": "Displays musical scale information on Bilibili videos.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://raw.githubusercontent.com/*"
  ],
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/video/*", "*://*.bilibili.com/list/*"],
      "js": ["content.js"]
    }
  ]
}
